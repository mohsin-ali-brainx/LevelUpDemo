<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.example.levelup.activityViewModels.LoginViewModel"/>
        <import type="com.example.levelup.activities.Login"/>

        <variable
            name="viewModel"
            type="LoginViewModel" />

        <variable
            name="listnerHandler"
            type="Login" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.Login"
        android:background="@color/white">

        <ImageView
            android:id="@+id/logo_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/logo_top_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_levelup_logo" />

        <TextView
            android:id="@+id/text_view_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/title_top_margin"
            android:fontFamily="@font/geometos_bold"
            android:text="@string/login_title"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="@dimen/font_22"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logo_image_view" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_margin1_top"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/ic_sponser" />


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_Email"
            android:text="@={viewModel.email}"
            android:hint="@string/email_hint"
            android:textColorHint="@color/grey_text_color"
            android:background="@drawable/edit_text_round_shape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_title"
            android:layout_marginTop="@dimen/edit_text_margin_top"
            android:layout_marginStart="@dimen/edit_text_margin_start"
            android:layout_marginEnd="@dimen/edit_text_margin_end"
            android:padding="@dimen/edit_text_padding"
            android:fontFamily="@font/ubuntu_regular"
            android:textSize="@dimen/font_medium"
            android:textColor="@color/black_text_color" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/edit_text_margin_start"
            android:layout_marginTop="@dimen/edit_text_margin_top_12"
            android:layout_marginEnd="@dimen/edit_text_margin_end"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toBottomOf="@+id/et_Email">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_Password"
                android:text="@={viewModel.password}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/password_hint"
                android:textColorHint="@color/grey_text_color"
                android:background="@drawable/edit_text_round_shape"
                android:inputType="textPassword"
                android:padding="@dimen/edit_text_padding"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:fontFamily="@font/ubuntu_regular"
                android:textSize="@dimen/font_medium"
                android:textColor="@color/black_text_color" />

<!--            <ImageButton-->
