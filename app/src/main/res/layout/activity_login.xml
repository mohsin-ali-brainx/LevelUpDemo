            <ToggleButton
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/toggle_password_selector"
                android:textOn=""
                android:textOff=""
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:gravity="center"
                android:onClick="@{listnerHandler::toggleEvent}"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Powered By"
            android:textAllCaps="true"
            android:fontFamily="@font/ubuntu_regular"
            android:textColor="@color/theme_color"
            android:textSize="@dimen/font_medium_small"
            app:layout_constraintBottom_toTopOf="@+id/imageView3"
            android:layout_marginBottom="@dimen/activity_margin_bottom"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_forgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/forgot_password"
            android:textAlignment="textEnd"
            android:fontFamily="@font/ubuntu_medium"
            android:textSize="@dimen/font_small_14"
            android:textColor="@color/theme_color"
            android:layout_marginTop="@dimen/edit_text_margin_top_12"
            android:layout_marginEnd="@dimen/edit_text_margin_end"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

        <Button
            android:id="@+id/btn_getStarted"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/edit_text_margin_start"
            android:layout_marginEnd="@dimen/edit_text_margin_end"
            android:layout_marginTop="@dimen/activity_margin_bottom"
            style="@style/ButtonThemeColorStyle"
            android:text="@string/login"
            app:layout_constraintTop_toBottomOf="@id/tv_forgotPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:onClick="@{listnerHandler::LoginClicked}"
            />

