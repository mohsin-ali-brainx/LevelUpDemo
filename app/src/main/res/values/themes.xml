<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LevelUp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/theme_color</item>
        <item name="colorPrimaryDark">@color/theme_color_dark</item>
        <item name="colorPrimaryVariant">@color/theme_color_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/theme_color_dark</item>
        <item name="colorSecondaryVariant">@color/theme_color_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
<!--        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>-->
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/theme_color</item>
        <item name="colorPrimaryDark">@color/theme_color_dark</item>
        <item name="colorPrimaryVariant">@color/theme_color_light</item>
        <item name="colorOnPrimary">@color/theme_color_dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/theme_color_dark</item>
        <item name="colorSecondaryVariant">@color/theme_color_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
<!--        <item name="android:statusBarColor" tools:targetApi="21">?attr/colorOnPrimary</item>-->
<!--        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>-->
        <item name="android:statusBarColor" tools:targetApi="23" >@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23" >false</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyDialog" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="CardTheme" parent="Theme.MaterialComponents.Bridge">
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ubuntu_medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="ButtonThemeColorStyle" parent="ButtonStyle">
        <item name="android:background">@drawable/button_theme_roundshape</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonRedColorStyle" parent="ButtonStyle">
        <item name="android:background">@drawable/button_red_roundshape</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonWhiteColorStyle" parent="ButtonStyle">
        <item name="android:background">@drawable/button_white_bg_roundshape</item>
        <item name="android:textColor">@color/red_color</item>
    </style>

    <style name="ButtonLightGreyColorStyle" parent="ButtonStyle">
        <item name="android:background">@drawable/button_lightgrey_roundshape</item>
        <item name="android:textColor">@color/blue_text_color</item>
        <item name="fontFamily">@font/avenirnextltpro_bold</item>
        <item name="android:textSize">@dimen/font_small_14</item>
    </style>

    <style name="ButtonRedColorStyle_Logout" parent="ButtonStyle">
        <item name="android:background">@drawable/button_red_roundshape</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/avenirnextltpro_bold</item>
        <item name="android:textSize">@dimen/font_small_14</item>
    </style>

    <style name="AveinNextFont_Regular">
        <item name="android:fontFamily">@font/avenirnextlpro_regular</item>
    </style>

    <style name="AveinNextFont_Bold">
        <item name="android:fontFamily">@font/avenirnextltpro_bold</item>
    </style>

    <style name="Geometos_Bold">
        <item name="android:fontFamily">@font/geometos_bold</item>
    </style>

    <style name="Ubuntu_Medium">
        <item name="android:fontFamily">@font/ubuntu_medium</item>
    </style>

    <style name="Ubuntu_Regular">
        <item name="android:fontFamily">@font/ubuntu_regular</item>
    </style>

    <style name="roundCorneredEditTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black_text_color</item>
        <item name="android:singleLine">true</item>
        <item name="maxLines">1</item>
        <item name="android:capitalize">words</item>
        <item name="android:fontFamily">@font/ubuntu_regular</item>

<!--        <item name="android:layout_marginTop">@dimen/edit_text_margin_top</item>-->
